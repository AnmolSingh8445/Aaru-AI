{
  "name": "service-host-runtime",
  "productName": "Service Host Runtime",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --ia32 --arm64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.service.host",
    "productName": "Service Host Runtime",
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Service Host Runtime"
    },
    "extraResources": [
      "whisper_bin/**",
      "whisper_models/**",
      "eng.traineddata"
    ]
  },
  "keywords": [],
  "author": "Rivvo",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "tesseract.js": "^6.0.1"
  }
}